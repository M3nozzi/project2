<div id="form-main">
  <div id="form-div">
    <form class="edit-form" action="/place-edit?placeId={{_id}}" method="POST" enctype="multipart/form-data">
      <p class="name">
         <label class='edit-label' for="name">Name</label>
         <input type="text" name="name" value="{{name}}" class="feedback-input" id="name">
      </p>

       <p class="type">
         <label class='edit-label' for="type">Type</label>
        <select name="type" value={{type}} id="" onchange="" class="feedback-input">
              <option value="general">General</option>
              <option value="american football">American Football</option>
              <option value="basketball">Basketball</option>
               <option value="cycling">Cycling</option>
               <option value="football">Football</option>
              <option value="gym">Gym</option>
              <option value="hiking">Hiking</option>
              <option value="rugby">Rugby</option>
               <option value="tennis">Tennis</option>
               <option value="trekking">Trekking</option>
                <option value="volley">Volley</option> 
            </select>
      </p>
      
      <p class="address">
        <label class='edit-label' for="address">Address</label>
        <input  id="latitude" type="text" name="latitude" value="{{location.coordinates.[1]}}" hidden>
          <input id="longitude" type="text" name="longitude" value="{{location.coordinates.[0]}}" hidden>
          <input id="address" type="address" name="address" value="{{address}}" class="feedback-input" required>
      </p>
      
      <p class="text">
        <label class='edit-label' for="description">Description</label>
         <input type="text" name="description" value="{{description}}" class="feedback-input">
      </p>
      <p class='photo'>
      <label class='edit-label' for="photo">Change photo: </label>
      <input type="file" name="photo" required>
      </p>
      <div class="submit">
         <button type="submit" id="button-blue">EDIT</button>
      </div>
    </form>
  </div>
