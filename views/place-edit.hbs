<h1>edit place</h1>
<form action="/place-edit?placeId={{_id}}" method="POST" enctype="multipart/form-data">
  <label for="name">Name:
    <input type="text" name="name" value="{{name}}">
  </label><br>
  <label for="type">Type:
    <input type="text" name="type" value="{{type}}">
  </label><br>
  <label for="location">Location:
    <input type="text" name="latitude" value="{{location.coordinates.[1]}}">
    <input type="text" name="longitude" value="{{location.coordinates.[0]}}">
  </label><br>
  <label for="description">Description:
    <input type="text" name="description" value="{{description}}">
  </label><br>
<img src='{{path}}' alt='{{title}}'>
  <label for="photo">Change photo:
    <input type="file" name="photo" required>
  </label>
  <br>
  <button type="submit">EDIT</button>
</form>