<h1 class="edit-h1">edit place</h1>
<form class="edit-form"action="/place-edit?placeId={{_id}}" method="POST" enctype="multipart/form-data">
  <label class='edit-label' for="name">Name:
    <input class='edit-input' type="text" name="name" value="{{name}}">
  </label><br>
  {{!-- <label class='edit-label' for="type">Type:
    <input class='edit-input' type="text" name="type" value="{{type}}">
  </label><br> --}}
  <label class="edit-label" for="type">Type:
           <select name="type" value={{type}} id="" onchange="">
             <option value="General">General</option>
              <option value="Basketball">Basketball</option>
                <option value="Football">Football</option>
                <option value="Gym">Gym</option>
                <option value="Volley">Volley</option>
                <option value="Tennis">Tennis</option>
                <option value="Trekking">Trekking</option>
                <option value="Hiking">Hiking</option>
                 <option value="Cycling">Cycling</option>
            </select>
  </label><br>

   <label class='edit-label' for="address">Address:
          <input  id="latitude" type="text" name="latitude" value="{{location.coordinates.[1]}}" hidden>
          <input id="longitude" type="text" name="longitude" value="{{location.coordinates.[0]}}" hidden>
          <input id="address" type="address" name="address" value="{{address}}" required>
  </label> 
  <label  class='edit-label'for="description">Description:
    <input type="text" name="description" value="{{description}}">
  </label><br>
<img src='{{path}}' alt='{{title}}'>

  <label class='edit-label' for="photo">Change photo:
    <input type="file" name="photo" required>
  </label>
  <br>
  <button id="submit" type="submit">EDIT</button>
</form>