<h1>Add a new Spot Sport</h1>

<form action="/place-add" method="POST" enctype="multipart/form-data">
  <label for="name">Name:
    <input type="text" name="name"required>
  </label>
  <br>
  <br>
  <label class="edit-label" for="type">Type:
            <select name="type" id="" onchange="">
              <option value="General">General</option>
              <option value="Basketball">Basketball</option>
                <option value="Football">Football</option>
                <option value="Gym">Gym</option>
                <option value="Volley">Volley</option>
                <option value="Tennis">Tennis</option>
                <option value="Trekking">Trekking</option>
                <option value="Hiking">Hiking</option>
                 <option value="Cycling">Cycling</option>
            </select>
  </label><br>
  <br>
  <br>

   <label for="address">Address:
          <input id="latitude" type="text" name="latitude" hidden>
          <input id="longitude" type="text" name="longitude" hidden>
          <input id="address" type="address" name="address" placeholder="Address, number, City" required>
  </label> 
  <br>
  <br>
  <label for="description">Description:
    <input type="text" name="description">
  </label>
  <br>
  <br>
  <label for="photo">Photo:
    <input type="file" name="photo" required>
  </label>
  <br>
  <br>
  <button id="addButton" type="submit">ADD</button>
</form>