<h2>Signup</h2>

<form action="/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <label for="firstName">First Name:</label>
  <input id="firstName" type="text" name="firstName" placeholder="Vito" required>
  <br><br>
  <label for="lastName">Last Name:</label>
  <input id="lastName" type="text" name="lastName" placeholder="Corleone" required>
  <br><br>
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="vito.corleone" required>
  <br><br>
  <label for="email">Email</label>
  <input id="email" type="text" name="email" placeholder="vito@corleone.com" required>
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="********" required>
  <br><br>
 <label for="photo">Profile Photo</label>
  <input type="file" name="photo" id="photo" required>
  
  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button>Create account</button>
 <br>
 <br>
  <a href="/auth/google">Sign up With Google</a>
  <br>
  <br>
  <a href="/auth/facebook">Sign up with Facebook</a>
  <p class="account-message">
    Do you already have an account?
    <a href="/login">Login</a>
    
  </p>
</form>