<div class="title">
{{#with places}}
<h1 class="h1-title">{{this.name}}</h1>
{{/with}}
{{#with places}}
<div class="div-icon">
<a href="/place-edit/{{_id}}" ><i class="far fa-edit"></i></a>
</div>
{{/with}}
<div class="div-photoMap">
{{#with places}}
<div class="div-Photo">
<img class="img-Places"src='{{path}}' alt='{{title}}'>
<div class="div-descriptions">
<h4>Type: {{type}}</h4>
<h4>Address: {{address}}</h4>
<p>{{description}}</p>
</div>
</div>
<div class="mapDetails" id="map"></div> 
{{/with}}
</div>

<div class="div-review">
{{#with places}}
<a href="/place-review/{{_id}}"><button>Create a review</button></a>
{{/with}}
<h2>Reviews</h2>
{{#each places.reviews}}
<div class="review-item">
  <p>{{comments}}</p>
  <span>{{username}}</span>
</div>
{{/each}}
</div>


</div>
