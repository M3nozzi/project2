<span><a href="/places">Back</a></span><br>

{{#with places}}
<h1>{{this.name}}</h1>
<h4>type: {{type}}</h4>
<h4>address: {{address}}</h4>
{{#if path}}
<img src='{{path}}' alt='{{title}}'>
{{/if}}
<p>{{description}}</p>
<br>
<a href="/place-edit/{{_id}}"><button>edit</button></a>
<a href="/place-review/{{_id}}"><button>Create a review</button></a>
<br>
<br>
<div id="map"></div> 
{{/with}}
<h2>Reviews</h2>
{{#each places.reviews}}
<div class="review-item">
  <p>{{comments}}</p>
  <span>{{username}}</span>
</div>
{{/each}}