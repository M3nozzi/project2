<link rel="stylesheet" href="/stylesheets/place-details.css" />
<script src="https://kit.fontawesome.com/0cc4f904e8.js" crossorigin="anonymous"></script>
<header>
    <h2>Spot Sport</h2>
  <nav class="header-nav">
     <ul class="header-ul">
        <li class="header-li">
    <a  class="header-a" href="/">Home</a>
    </li>
    <li class="header-li">
     <a class="header-a" href="/places">Spots</a>
    </li>
    <li class="header-li">
     <a class="header-a" href="/profile/{{user._id}}">Profile</a>
    </li>
    <li class="header-li">
     <a class="btn header-a" href="/logout" title="logout">Logout</a>
     </li>
     </ul>
  </nav>
</header>
<br>
<br>
<br>

<div class="title">
{{#with places}}
<h1 class="h1-title">{{this.name}}</h1>
{{/with}}
{{#with places}}
<div class="div-icon">
<a href="/place-edit/{{_id}}" ><i class="far fa-edit"></i></a>
</div>
{{/with}}
<div class="div-photoMap">
{{#with places}}
<div class="div-Photo">
<img class="img-Places"src='{{path}}' alt='{{title}}'>
<div class="div-descriptions">
<h4>Type: {{type}}</h4>
<h4>Address: {{address}}</h4>
<p>{{description}}</p>
</div>
</div>
<div class="mapDetails" id="map"></div> 
{{/with}}
</div>

<div class="div-review">
{{#with places}}
<a class="btn-createReview" href="/place-review/{{_id}}"><i class="far fa-comment-dots"></i></a>
{{/with}}
<div class="background-div">
<h2>Reviews</h2>
{{#each places.reviews}}
<div class="review-item">
  <p>{{comments}}</p>
  <span><b>{{username}}</b></span>
</div>
{{/each}}
</div>
</div>
</div>

