<script src="https://kit.fontawesome.com/0cc4f904e8.js" crossorigin="anonymous"></script>
<header>
     <p class="header-p">{{#if user}}Hey <b>{{user.firstName}}</b>, {{/if}}Welcome to SpotSports!</p>
  <nav class="header-nav">
     <ul class="header-ul">
        <li class="header-li">
    <a  class="header-a" href="/">Home</a>
    </li>
    <li class="header-li">
     <a class="header-a" href="/profile/{{user._id}}">Profile</a>
    </li>
    <li class="header-li">
     <a class="btn header-a" href="logout" title="logout">Logout</a>
     </li>
     </ul>
  </nav>
</header>
<br>
<br>
<br>
<div "div-search">
<form action="/places" method="POST" class="search-places">
   <input id="search" type="text" name="search" placeholder="Search by sport type">
   <button type="submit"><i class="fas fa-search-location"></i></button>
</form>
</div>

  <div class="cards-list" >

     <div class="card ">
  <div class="card_image"></div>
  <div class="card_title">
    <p class="places-titleADD"><a class="a-addPlace" href="/place-add">+</a></p>
  </div>
  </div>
   {{#each places}}

  <div class="card ">
  <div class="card_image"> 
    <button class="delete"> <a class="a-delete" href="/place-delete/{{_id}}">X</a></button>
    <img class="img-card"src='{{path}}' alt='{{title}}'> 
  
   </div>
  <div class="card_title">
    <h3 class="places-title"><a href="/places/{{_id}}">{{name}}</a></h3>
    <p class="type-name" hidden>{{type}}</p>
  </div>
  </div>
   {{/each}}
</div>
  </div>
</div>
<br>
<br>
<div class="mapPlaces" id="map"></div> 

<link rel="stylesheet" href="/stylesheets/places.css" />





